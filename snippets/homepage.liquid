<main class="pt-10">
  <!-- hero banner section -->
  <div
    class="container flex flex-col-reverse md:flex-row justify-center items-center"
  >
    <div class="w-1/2">
      <h2 class="text-6xl font-bold">FIND CLOTHES THAT MATCHES YOUR STYLE</h2>
      <p class="text-base font-normal py-4">
        Browse through our diverse range of meticulously crafted garments,
        designed to bring out your individuality and cater to your sense of
        style.
      </p>
      <button class="btn">Shop Now</button>
      <div class="flex gap-4 mt-6">
        {% for i in (1..3)%}
        <div class="w-1/3">
          <h2 class="text-[40px] font-bold">200+</h2>
          <p>International Brands</p>
        </div>
        {%endfor%}
      </div>
    </div>
    <div class="w-1/2 flex justify-end items-end">
      <figure>
        <img src="../assets/banner_img.png" alt="" />
      </figure>
    </div>
  </div>

  <!-- group sponcer section -->
  <div class="bg-black">
    <div class="container">
      <div class="flex justify-center items-center py-4">
        {% for i in (1..5)%}
        <figure class="w-1/5">
          <img src="../assets/Group.png" alt="" />
        </figure>
        {% endfor%}
      </div>
    </div>
  </div>

  <!-- New Arrivlas section -->
  <div class="pt-20">
    <div class="container">
      <h2 class="section_header text-center uppercase">New Arrivals</h2>
      <div class="flex gap-4 pt-12">
        {%for i in (1..4)%}
        <div
          class="max-w-xs rounded-md shadow-md dark:bg-gray-50 dark:text-gray-800"
        >
          <img
            src="{{ 't-shirt.png' | asset_url }}"
            alt=""
            class="object-cover object-center w-full rounded-t-md h-72"
          />
          <div class="flex flex-col justify-between p-6 space-y-8">
            <div class="space-y-2">
              <h2 class="text-xl font-semibold tracking-wide">
                Donec lectus leo
              </h2>
              <p class="flex gap-1">
                {%for i in (1..5)%}
                <svg
                  width="23"
                  height="21"
                  viewBox="0 0 23 21"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M11.4868 0L14.6852 6.8872L22.2237 7.80085L16.662 12.971L18.1226 20.4229L11.4868 16.731L4.85096 20.4229L6.31155 12.971L0.749813 7.80085L8.2883 6.8872L11.4868 0Z"
                    fill="#FFC633"
                  />
                </svg>
                {%endfor%}
              </p>
              <p class="text-lg font-bold dark:text-gray-800">$26</p>
            </div>
          </div>
        </div>
        {%endfor%}
      </div>
      <div class="flex justify-center items-center pt-16">
        <button class="btn_sec">View All</button>
      </div>
    </div>
  </div>

  <!-- New Arrivlas section -->
  <div class="pt-20">
    <div class="container">
      <h2 class="section_header text-center uppercase">top selling</h2>
      <div class="flex gap-4 pt-12">
        {%for i in (1..4)%}
        <div
          class="max-w-xs rounded-md shadow-md dark:bg-gray-50 dark:text-gray-800"
        >
          <img
            src="{{ 'shirt.png' | asset_url }}"
            alt=""
            class="object-cover object-center w-full rounded-t-md h-72"
          />
          <div class="flex flex-col justify-between p-6 space-y-8">
            <div class="space-y-2">
              <h2 class="text-xl font-semibold tracking-wide">
                Donec lectus leo
              </h2>
              <p class="flex gap-1">
                {%for i in (1..5)%}
                <svg
                  width="23"
                  height="21"
                  viewBox="0 0 23 21"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M11.4868 0L14.6852 6.8872L22.2237 7.80085L16.662 12.971L18.1226 20.4229L11.4868 16.731L4.85096 20.4229L6.31155 12.971L0.749813 7.80085L8.2883 6.8872L11.4868 0Z"
                    fill="#FFC633"
                  />
                </svg>
                {%endfor%}
              </p>
              <p class="text-lg font-bold dark:text-gray-800">$26</p>
            </div>
          </div>
        </div>
        {%endfor%}
      </div>
      <div class="flex justify-center items-center pt-16">
        <button class="btn_sec">View All</button>
      </div>
    </div>
  </div>

  <!-- Dress Style -->
  <div class="pt-20">
    <div class="container">
      <div class="bg-gray-200 rounded-xl py-[70px]">
        <h2 class="section_header text-center uppercase">
          BROWSE BY dress STYLE
        </h2>
        <div class="px-16"></div>
      </div>
    </div>
  </div>
</main>
